<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.notePage.NoteTitlePageFragment"
    android:background="@drawable/loginfragment_constraintlayout">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/note_add"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="211dp"
        android:background="@android:color/transparent"
        android:text="Yeni Not Ekle"
        android:textColor="#8F0404"
        android:textSize="23sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/noteTitle_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/noteTitle_recycler"
        android:layout_width="match_parent"
        android:layout_height="575dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/note_add" />

</androidx.constraintlayout.widget.ConstraintLayout>