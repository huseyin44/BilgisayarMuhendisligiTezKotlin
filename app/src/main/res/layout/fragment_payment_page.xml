<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PaymentPageFragment"
    android:background="@drawable/loginfragment_constraintlayout">


    <TextView
        android:id="@+id/paymentPage_textUcret"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:layout_width="365dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="ÜCRET ŞU"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/paymentPage_username"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="15dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint=" Kart Üzerindeki Ad Soyad"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/paymentPage_kartNumarasi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentPage_textUcret" />

    <EditText
        android:id="@+id/paymentPage_kartNumarasi"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="19dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint=" Kart Numarası"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/paymentPage_linearlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentPage_username" />

    <TextView
        android:id="@+id/paymentPage_krediKartTipi"
        android:layout_width="85dp"
        android:layout_height="25dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="14dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/paymentPage_kartNumarasi"
        app:layout_constraintEnd_toEndOf="@+id/paymentPage_crediImageView"
        app:layout_constraintTop_toTopOf="@+id/paymentPage_kartNumarasi" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/paymentPage_crediImageView"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="305dp"
        android:src="@drawable/ic_baseline_credit_card_24"
        app:layout_constraintBottom_toBottomOf="@+id/paymentPage_kartNumarasi"
        app:layout_constraintEnd_toEndOf="@+id/paymentPage_kartNumarasi"
        app:layout_constraintStart_toStartOf="@+id/paymentPage_kartNumarasi"
        app:layout_constraintTop_toTopOf="@+id/paymentPage_kartNumarasi" />

    <LinearLayout
        android:id="@+id/paymentPage_linearlayout"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="39dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentPage_kartNumarasi">

        <EditText
            android:id="@+id/paymentPage_kartAy"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint=" Ay"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/paymentPage_kartYil"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginStart="13dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint=" Yıl"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/paymentPage_kartCVV"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:background="#FFFFFF"
            android:ems="10"
            android:hint=" CVV"
            android:inputType="numberPassword"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="380dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/paymentPage_devamEt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paymentPage_linearlayout">

        <CheckBox
            android:id="@+id/paymentPage_checkBox"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="340dp"
            android:layout_height="match_parent"
            android:text="Ön bilgilendirme formunu ve mesafeli satış sözleşmesini okudum, onaylıyıorum."
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="italic" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/paymentPage_devamEt"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="196dp"
        android:layout_marginBottom="205dp"
        android:background="@drawable/text_corners"
        android:text="Devam Et"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6" />
</androidx.constraintlayout.widget.ConstraintLayout>