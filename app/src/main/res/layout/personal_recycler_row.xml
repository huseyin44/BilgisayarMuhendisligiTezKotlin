<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:id="@+id/personalRecyclerLinearLayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/personalRecycler_profileimage"
            android:layout_width="50dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/personalRecycler_isimsoyisim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:text="isimsoyisim"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="italic"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <TextView
        android:id="@+id/personalRecycler_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:text="gonderilen "
        android:singleLine="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-condensed-medium"/>
</LinearLayout>