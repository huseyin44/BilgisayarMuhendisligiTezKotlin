<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.profile.antrenor.userWriteAntrenor.UserAntrenorProfileFragment"
    android:background="#BAC3C1C1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/antrenorUserProfile_profilResmi"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_launcher_background" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="5dp">
                <TextView
                    android:id="@+id/antrenorUserProfile_uyetipi"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="sporcu"
                    android:textSize="17sp"
                    android:textStyle="italic"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/antrenorUserProfile_isim"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="isim"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/antrenorUserProfile_eposta"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="eposta"
                    android:textSize="18sp"
                    android:textStyle="italic"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/antrenorUserProfile_cinsiyet"
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:text="CİNSİYET"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/antrenorUserProfile_boy"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:text="BOY"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/antrenorUserProfile_kilo"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="ucret"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/antrenorUserProfile_aylikUcret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:inputType="textMultiLine"
            android:text="aylik ucret 50 tl"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/antrenorUserProfile_branslar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:inputType="textMultiLine"
            android:text="Branşlar"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/antrenorUserProfile_antrenorDetayliBilgi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:inputType="textMultiLine"
            android:text="detaylibilgi"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textStyle="italic"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/antrenorUserProfile_bilgilerimiGuncelle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:text="Bilgilerimi Güncelle"
            android:textColor="#0E1493"
            android:background="@android:color/transparent"
            android:textStyle="italic"
            android:textSize="19sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/antrenorUserProfile_ogrencilereProgramYaz"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:text="Öğrencilere Program Yaz"
            android:textColor="#880808"
            android:background="@android:color/transparent"
            android:textStyle="italic"
            android:textSize="19sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="Öğrencilerim"
            android:gravity="center_vertical"
            android:textSize="25sp"
            android:textColor="#AC0906"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/antrenorUserProfile_ogrencilerim_text_bossa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="sadasd"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="15sp"
            android:visibility="gone"/>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/antrenorUserProfile_scrollView_ogrencilerim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/antrenorUserProfile_recycler_ogrencilerim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="ANTREMAN Programlarım"
            android:gravity="center_vertical"
            android:textSize="21sp"
            android:textColor="#AC0906"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/antrenorUserProfile_programlarim_text_bossa"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:text="sadasd"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="15sp"
            android:visibility="gone"/>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/antrenorUserProfile_scrollView_programlarim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/antrenorUserProfile_recycler_programlarim"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </androidx.core.widget.NestedScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="Paylaşımlarım"
            android:gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="#AC0906"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/antrenorUserProfile_paylasimlarim_text_bossa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="sadasd"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="15sp"
            android:visibility="gone"/>
        <androidx.core.widget.NestedScrollView
            android:id="@+id/antrenorUserProfile_scrollView_paylasimlarim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/antrenorUserProfile_recycler_paylasimlarim"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>