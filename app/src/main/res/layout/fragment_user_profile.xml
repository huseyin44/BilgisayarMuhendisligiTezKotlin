<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.UserProfileFragment"
    android:background="@drawable/loginfragment_constraintlayout">

    <ImageView
        android:id="@+id/userprofile_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="186dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/userprofile_textview_isim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userprofile_textview_isim"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="116dp"
        android:background="@drawable/text_corners"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        android:text="isim"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userprofile_image" />

    <TextView
        android:id="@+id/userprofile_textview_soyisim"
        android:background="@drawable/text_corners"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="116dp"
        android:fontFamily="sans-serif-medium"
        android:text="soyisim"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userprofile_textview_isim" />

    <TextView
        android:id="@+id/userprofile_textview_uyetipi"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="116dp"
        android:background="@drawable/text_corners"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:text="uyetipi"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userprofile_textview_soyisim" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/userprofile_guncelle"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="246dp"
        android:layout_marginBottom="175dp"
        android:background="#2B8AB5"
        android:fontFamily="sans-serif-medium"
        android:text="GÃ¼ncelle"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userprofile_textview_uyetipi" />

</androidx.constraintlayout.widget.ConstraintLayout>