<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginfragment_constraintlayout"
    tools:context=".view.profile.UserProfileFragment">

    <ImageView
        android:id="@+id/userprofile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="19dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/userprofile_guncelle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userprofile_textview_isim"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/text_corners"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:text="isim"
        android:textAlignment="gravity"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/userprofile_textview_soyisim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userprofile_image"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/userprofile_textview_soyisim"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/text_corners"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:text="soyisim"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/userprofile_textview_uyetipi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userprofile_image"
        app:layout_constraintTop_toBottomOf="@+id/userprofile_textview_isim" />

    <TextView
        android:id="@+id/userprofile_textview_uyetipi"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_corners"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:text="uyetipi"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/userprofile_textview_aylikucret"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userprofile_image"
        app:layout_constraintTop_toBottomOf="@+id/userprofile_textview_soyisim" />

    <TextView
        android:id="@+id/userprofile_textview_aylikucret"
        android:layout_width="225dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="105dp"
        android:background="@drawable/text_corners"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:text="Aylik Ucret"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/userprofile_basliktext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/userprofile_image"
        app:layout_constraintTop_toBottomOf="@+id/userprofile_textview_uyetipi" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/userprofile_guncelle"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="66dp"
        android:background="#2B8AB5"
        android:fontFamily="sans-serif-medium"
        android:text="Güncelle"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="normal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/userprofile_basliktext"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/userprofile_basliktext"
        android:layout_width="380dp"
        android:layout_height="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="16dp"
        android:text="Öğrencileriniz"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/userprofile_nestedScroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userprofile_guncelle" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/userprofile_nestedScroll"
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userprofile_basliktext">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userprofile_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>