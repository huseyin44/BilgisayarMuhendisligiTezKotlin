<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.sports_exercise.SportsExerciseFragment"
    android:background="@drawable/loginfragment_constraintlayout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/sportsexercise_germetext"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            android:text="Germe Hareketleri"
            android:textAlignment="center"
            android:layout_marginTop="3dp"/>
        <ImageView
            android:id="@+id/sportsexercise_germeimage"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/sportsexercise_jimnastiktext"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            android:text="Jimnastik"
            android:textAlignment="center"
            android:layout_marginTop="3dp"/>
        <ImageView
            android:id="@+id/sportsexercise_jimnastikimage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/sportsexercise_ekipmanyoktext"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            android:text="Ekipman Yok"
            android:textAlignment="center"
            android:layout_marginTop="3dp"/>
        <ImageView
            android:id="@+id/sportsexercise_ekipmanyokimage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/sportsexercise_islevselcalismatext"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            android:text="İşlevsel Çalışma"
            android:textAlignment="center"
            android:layout_marginTop="3dp"/>
        <ImageView
            android:id="@+id/sportsexercise_islevselcalismaimage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>


</ScrollView>