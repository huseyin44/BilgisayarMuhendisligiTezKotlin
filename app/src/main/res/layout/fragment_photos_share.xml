<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PhotosShareFragment"
    android:background="@drawable/loginfragment_constraintlayout">

    <ImageView
        android:id="@+id/photosShare_gorselSec"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="31dp"
        android:src="@drawable/ic_baseline_add_photo_alternate_24"
        app:layout_constraintBottom_toTopOf="@+id/photosShare_yorumText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/photosShare_yorumText"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_marginBottom="35dp"
        android:background="@color/white"
        android:ems="10"
        android:hint=" Açıklama yaz."
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/photosShare_paylasButon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photosShare_gorselSec" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/photosShare_paylasButon"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginBottom="279dp"
        android:background="@drawable/text_corners"
        android:ems="10"
        android:text="Paylaş"
        android:textSize="25sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photosShare_yorumText" />

</androidx.constraintlayout.widget.ConstraintLayout>