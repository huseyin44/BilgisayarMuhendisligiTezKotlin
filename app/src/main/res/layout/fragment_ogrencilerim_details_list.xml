<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ogrenciAntrenorListPage.OgrencilerimDetailsListFragment"
    android:orientation="vertical"
    android:background="#BAC3C1C1">

    <TextView
        android:id="@+id/ogrencilerim_details_list_ogrenci_isim"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="öğrenci isim"
        android:textSize="23sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>
    <TextView
        android:id="@+id/ogrencilerim_details_list_ogrenci_yatirdigi_para"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="yatirdiği para"
        android:textSize="20sp"
        android:textStyle="italic"
        android:gravity="center_vertical"
        android:textColor="#870404"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/ogrencilerim_details_list_ogrenci_yatirdigi_paranin_tarihi"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="yatirdiği tarih"
        android:textSize="19sp"
        android:textStyle="italic"
        android:gravity="center_vertical"
        android:textColor="#0A72A5"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>


</LinearLayout>