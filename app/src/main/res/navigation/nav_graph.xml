<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.huseyinoral_bilgisayarmuhendisligitez.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_antrenorListFragment"
            app:destination="@id/antrenorListFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.huseyinoral_bilgisayarmuhendisligitez.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_antrenorListFragment"
            app:destination="@id/antrenorListFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/antrenorListFragment"
        android:name="com.example.huseyinoral_bilgisayarmuhendisligitez.AntrenorListFragment"
        android:label="fragment_antrenor_list"
        tools:layout="@layout/fragment_antrenor_list" >
        <action
            android:id="@+id/action_antrenorListFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>