<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.huseyinoral_bilgisayarmuhendisligitez.view.LoginFragment"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homePageFragment"
            app:destination="@id/homePageFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment2"
            app:destination="@id/registerFragment2" />
    </fragment>
    <fragment
        android:id="@+id/homePageFragment"
        android:name="com.example.huseyinoral_bilgisayarmuhendisligitez.view.HomePageFragment"
        tools:layout="@layout/fragment_home_page" >
        <action
            android:id="@+id/action_homePageFragment_to_antrenorListFragment2"
            app:destination="@id/antrenorListFragment2" />
        <action
            android:id="@+id/action_homePageFragment_to_tipsAndAdviceFragment2"
            app:destination="@id/tipsAndAdviceFragment" />
        <action
            android:id="@+id/action_homePageFragment_to_bodyMassIndexFragment"
            app:destination="@id/bodyMassIndexFragment" />
        <action
            android:id="@+id/action_homePageFragment_to_sportsExerciseFragment"
            app:destination="@id/sportsExerciseFragment" />
        <action
            android:id="@+id/action_homePageFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/bodyMassIndexFragment"
        android:name="com.example.huseyinoral_bilgisayarmuhendisligitez.view.BodyMassIndexFragment"
        tools:layout="@layout/fragment_body_mass_index" />
    <fragment
        android:id="@+id/sportsExerciseFragment"
        android:name="com.example.huseyinoral_bilgisayarmuhendisligitez.view.sports_exercise.SportsExerciseFragment"
        tools:layout="@layout/fragment_sports_exercise" >
        <action
            android:id="@+id/action_sportsExerciseFragment_to_freeExerciseFragment"
            app:destination="@id/freeExerciseFragment" />
    </fragment>
    <fragment
        android:id="@+id/tipsAndAdviceFragment"
        android:name="com.example.huseyinoral_bilgisayarmuhendisligitez.view.TipsAndAdviceFragment"
        tools:layout="@layout/fragment_tips_and_advice" />
    <fragment
        android:id="@+id/registerFragment2"
        android:name="com.example.huseyinoral_bilgisayarmuhendisligitez.view.RegisterFragment"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment2_to_homePageFragment"
            app:destination="@id/homePageFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/antrenorListFragment2"
        android:name="com.example.huseyinoral_bilgisayarmuhendisligitez.view.AntrenorListFragment"
        tools:layout="@layout/fragment_antrenor_list" />
    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.huseyinoral_bilgisayarmuhendisligitez.view.UserProfileFragment"
        tools:layout="@layout/fragment_user_profile" />
    <fragment
        android:id="@+id/freeExerciseFragment"
        android:name="com.example.huseyinoral_bilgisayarmuhendisligitez.view.sports_exercise.FreeExerciseFragment"
        tools:layout="@layout/fragment_free_exercise" />
</navigation>